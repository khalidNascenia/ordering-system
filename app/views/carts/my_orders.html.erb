<h1>My Orders</h1>

<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Sub Total</th>
                <th scope="col">Order Status</th>
            </tr>
        </thead>
        <tbody>
            <% @orders.each do |order| %>
                <tr>
                    <td><%= order.id %></td>
                    <td><%= order.subtotal %></td>
                    <td><%= order.get_humanized_status %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>